<Window x:Class="cteds_projeto_final.CategoryVisualizer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cteds_projeto_final"
        

        mc:Ignorable="d"
        Title="Categorias" Height="228" Width="491" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center" Width="491" Margin="0,0,0,5">
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="41,56,41,32"/>
        <Label Content="Categorias" HorizontalAlignment="Left" Margin="41,25,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="-0.048,0.532"/>
        <Button Content="Adicionar " HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="64" Margin="143,18,0,0" Click="Button_Click"/>
        <Button Content="Atualizar" HorizontalAlignment="Left" Height="30" Margin="212,18,0,0" VerticalAlignment="Top" Width="63"/>
        <Button Content="Remover" Height="30" Margin="280,18,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="65"/>
        <Button Content="Sair" HorizontalAlignment="Left" Height="33" Margin="395,15,0,0" VerticalAlignment="Top" Width="55" RenderTransformOrigin="0.665,0.77" Click="Button_Click"/>

    </Grid>
</Window>
